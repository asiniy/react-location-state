{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "dom",
      "es2019"
    ],
    "module": "amd",
    "moduleResolution": "node",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "outFile": "./dist/index.js"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src"
  ]
}
